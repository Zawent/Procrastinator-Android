<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF6DC"
    tools:context=".FinEncuestaActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40sp"
            android:text="Resultados de la encuesta"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Su nivel de procrastinación es:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/nivelUser"
            android:layout_width="65dp"
            android:layout_height="54dp"
            android:background="@drawable/cuadritonaranja"
            android:paddingTop="10dp"
            android:text="T"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textNivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60sp"
            android:text="nivel"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:text="¡Felicidades! este es el primer paso para aprovechar mejor tus tiempos."
            android:textAlignment="center"
            android:textColor="#474747"
            android:textSize="19sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginBottom="30sp"
            android:background="@drawable/cuadritomarron"
            android:text="“El tiempo es lo más valioso que puede gastar un hombre. “ -Teofasto"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:text="Recuerda verificar tu correo y vuelve a ingresar con tu cuenta registrada "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button17"
            android:layout_width="175dp"
            android:layout_height="76dp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="#9636BF"
            android:onClick="irAMenuInicio"
            android:text="Volver a iniciar sesión"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>