<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BloqueadorActivity">

    <Spinner
        android:id="@+id/spinner_apps"
        android:layout_width="377dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:prompt="@string/select_app" />

    <ListView
        android:id="@+id/list_view_blocked_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_hours"
            android:layout_width="120dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:hint="@string/hours"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/edit_text_minutes"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/minutes"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_start_block"
        android:layout_width="377dp"
        android:layout_height="82dp"
        android:text="@string/start_blocking" />

</LinearLayout>
